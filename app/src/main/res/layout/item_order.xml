<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/fontStyle5"
            app:cardCornerRadius="@dimen/fontStyle5"
            android:layout_margin="@dimen/padding_10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/padding_10">

                <ImageView
                    android:id="@+id/iv_img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/avatar"
                    android:layout_alignParentLeft="true"/>

                <LinearLayout
                    android:id="@+id/ll_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/padding_10"
                    android:layout_toRightOf="@id/iv_img">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textStyle="normal"
                    android:id="@+id/tv_que"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:visibility="visible"
                    android:text="ddd ksjdhfj | sdjfks kjsdfhks | jh"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:id="@+id/tv_amt"
                        android:layout_marginRight="4dp"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:visibility="visible"
                        android:text="566"/>


                    <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/padding_10"
                    android:layout_marginBottom="@dimen/padding_10"
                    android:layout_marginLeft="@dimen/padding_10"
                    android:layout_marginRight="@dimen/padding_10"
                    android:background="@color/darker_gray"
                    android:visibility="visible"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textStyle="normal"
                    android:id="@+id/tv_deliveryTime"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:visibility="visible"
                    android:text="Appros delivery time :"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textStyle="normal"
                        android:id="@+id/tv_status"
                        android:layout_marginRight="4dp"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:visibility="visible"
                        android:text="Processed from seller"/>

                     <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textStyle="normal"
                        android:id="@+id/tv_Date"
                        android:layout_marginRight="4dp"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:visibility="visible"
                        android:text="Date of order : 10/04/2018"/>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/padding_10"
                    android:layout_below="@id/ll_info">

                    <Button
                        android:id="@+id/btn_track"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:text="TRack"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:layout_marginRight="@dimen/padding_10"
                        android:background="@drawable/rectangular_border"/>

                    <Button
                        android:id="@+id/btn_support"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:text="support"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:layout_marginRight="@dimen/padding_10"
                        android:background="@drawable/rectangular_border"/>

                    <Button
                        android:id="@+id/btn_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:text="cancel"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:background="@drawable/rectangular_border"/>


                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>