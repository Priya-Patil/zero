<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/ll_withtoolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".cart.CartActivity"
            android:orientation="vertical">

            <!--region Toolbar Region-->
            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:gravity="top">

                    <RelativeLayout
                        android:id="@+id/originalToolbar"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/btn_back"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/ic_arrow_back"
                            android:backgroundTint="@color/white"/>

                        <TextView
                            android:id="@+id/txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/cart"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="22dp"
                            android:layout_marginLeft="15dp"
                            android:layout_toRightOf="@+id/btn_back" />

                        <TextView
                            android:id="@+id/tv_emptyCart"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/ic_cart_empty"
                            android:backgroundTint="@color/white"
                            android:visibility="gone"/>

                    <TextView
                            android:id="@+id/tv_emptyWishlist"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/ic_baseline_delete_24"
                            android:backgroundTint="@color/white"
                            android:visibility="gone"/>



                    </RelativeLayout>

                </androidx.appcompat.widget.Toolbar>


            </com.google.android.material.appbar.AppBarLayout>
            <!--endregion-->

            <RelativeLayout
                android:id="@+id/ll_wishlistNoItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_wishlist_empty"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:textSize="32dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/wishlist_empty" />

                <TextView
                    android:id="@+id/tv_emptywishlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_wishlist_empty"
                    android:textSize="18dp"
                    android:layout_marginTop="@dimen/padding_10"
                    android:gravity="center_horizontal"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/empty_wishlist"
                    android:fontFamily="@font/montserrat"/>

                <TextView
                    android:id="@+id/tv_NavHomeWish"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/tv_emptywishlist"
                    android:layout_centerHorizontal="true"
                    android:textSize="16dp"
                    android:layout_marginTop="@dimen/padding_10"
                    android:gravity="center_horizontal|center_vertical"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="@string/continue_shopping"
                    android:fontFamily="@font/montserrat"
                    android:background="@drawable/rectangular_circle"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_cartNoItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_cart_empty"
                    android:layout_width="200dp"
                    android:layout_height="160dp"
                    android:layout_centerHorizontal="true"
                    android:textSize="32dp"
                    android:background="@drawable/emptycart" />

                <TextView
                    android:id="@+id/tv_emptycart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_cart_empty"
                    android:textSize="18dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/empty_cart"
                    android:fontFamily="@font/montserrat"/>

                <TextView
                    android:id="@+id/tv_NavHomeCart"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/tv_emptycart"
                    android:layout_centerHorizontal="true"
                    android:textSize="16dp"
                    android:layout_marginTop="@dimen/padding_10"
                    android:gravity="center_horizontal|center_vertical"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="@string/continue_shopping"
                    android:fontFamily="@font/montserrat"
                    android:background="@drawable/rectangular_circle"/>

            </RelativeLayout>

             <ScrollView
                 android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="90dp"
                android:scrollbars="none"
                 android:visibility="gone"
                 android:layout_below="@id/appBarLayout">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:layout_marginRight="@dimen/padding_10"
                        android:orientation="vertical">


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_cart"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            tools:ignore="MissingConstraints" />

                        <!-- Ship and bill-->
                        <LinearLayout
                            android:id="@+id/ll_forcart"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="130dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:paddingStart="5dp"
                                android:paddingEnd="5dp"
                                android:text="Payment Type"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <RadioGroup
                                android:id="@+id/radioGroup"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <RadioButton
                                    android:id="@+id/rb_online"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_weight="1"
                                    android:checked="false"
                                    android:paddingLeft="@dimen/padding_10"
                                    android:text="Online"
                                    android:textSize="16dp"
                                    android:textStyle="bold" />

                                <RadioButton
                                    android:id="@+id/rb_cod"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_weight="1"
                                    android:checked="false"
                                    android:paddingLeft="@dimen/padding_10"
                                    android:text="COD"
                                    android:textSize="16dp"
                                    android:textStyle="bold" />

                            </RadioGroup>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="visible">

                                <TextView
                                    android:layout_width="130dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:paddingStart="5dp"
                                    android:paddingEnd="5dp"
                                    android:text="Ship To"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cv_shippingAddress"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_below="@id/rv_cart"
                                    android:layout_marginLeft="@dimen/padding_10"
                                    android:layout_marginTop="@dimen/padding_10"
                                    android:layout_marginRight="@dimen/padding_10"
                                    app:cardCornerRadius="10dp"
                                    app:cardElevation="@dimen/padding_10">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:weightSum="10">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/padding_20"
                                            android:layout_marginBottom="@dimen/padding_10"
                                            android:layout_weight="9"
                                            android:orientation="vertical">

                                            <EditText
                                                android:id="@+id/tv_shippingName"
                                                android:layout_width="wrap_content"
                                                android:layout_height="35dp"
                                                android:background="@null"
                                                android:enabled="false"
                                                android:fontFamily="@font/montserrat"
                                                android:hint="Name"
                                                android:maxLines="1"
                                                android:singleLine="true"
                                                android:textColor="@color/black"
                                                android:textSize="14dp"
                                                android:textStyle="bold"
                                                android:visibility="visible" />


                                            <EditText
                                                android:id="@+id/tv_shippingPhone"
                                                android:layout_width="wrap_content"
                                                android:layout_height="35dp"
                                                android:layout_below="@id/tv_shippingName"
                                                android:background="@null"
                                                android:enabled="false"
                                                android:fontFamily="@font/montserrat"
                                                android:hint="Number"
                                                android:textColor="@color/black"
                                                android:textSize="14dp"
                                                android:textStyle="bold"
                                                android:visibility="visible" />

                                            <EditText
                                                android:id="@+id/tv_shippingAddress"
                                                android:layout_width="wrap_content"
                                                android:layout_height="35dp"
                                                android:layout_below="@id/tv_shippingName"
                                                android:background="@null"
                                                android:enabled="false"
                                                android:fontFamily="@font/montserrat"
                                                android:hint="Address"
                                                android:textColor="@color/black"
                                                android:textSize="14dp"
                                                android:textStyle="bold"
                                                android:visibility="visible" />

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginRight="@dimen/padding_20"
                                                android:background="@drawable/rectangular_border_simple"
                                                android:orientation="horizontal">

                                                <Spinner
                                                    android:id="@+id/tv_shippingcity"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="35dp"
                                                    android:layout_centerVertical="true"
                                                    android:fontFamily="@font/montserrat"
                                                    android:hint="City"
                                                    android:maxLines="1"
                                                    android:paddingLeft="@dimen/padding_10"
                                                    android:singleLine="true"
                                                    android:spinnerMode="dialog"
                                                    android:textColor="@color/black"
                                                    android:textSize="14dp"
                                                    android:textStyle="bold"
                                                    android:visibility="visible" />

                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="5dp"
                                                android:layout_marginRight="@dimen/padding_20"
                                                android:background="@drawable/rectangular_border_simple"
                                                android:orientation="horizontal">

                                                <Spinner
                                                    android:id="@+id/tv_shippingstate"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="35dp"
                                                    android:layout_centerVertical="true"
                                                    android:fontFamily="@font/montserrat"
                                                    android:hint="State"
                                                    android:maxLines="1"
                                                    android:paddingLeft="@dimen/padding_10"
                                                    android:singleLine="true"
                                                    android:spinnerMode="dialog"
                                                    android:textColor="@color/black"
                                                    android:textSize="14dp"
                                                    android:textStyle="bold"
                                                    android:visibility="visible" />

                                            </LinearLayout>

                                            <EditText
                                                android:id="@+id/tv_shippingPincode"
                                                android:layout_width="wrap_content"
                                                android:layout_height="35dp"
                                                android:layout_below="@id/tv_shippingName"
                                                android:background="@null"
                                                android:enabled="false"
                                                android:fontFamily="@font/montserrat"
                                                android:hint="Address"
                                                android:textColor="@color/black"
                                                android:textSize="14dp"
                                                android:textStyle="bold"
                                                android:visibility="visible" />

                                        </LinearLayout>

                                        <View
                                            android:layout_width="1dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginTop="@dimen/padding_10"
                                            android:layout_marginBottom="@dimen/padding_10"
                                            android:layout_toLeftOf="@id/tv_shippingEdit"
                                            android:background="@color/darker_gray" />

                                        <TextView
                                            android:id="@+id/tv_shippingEdit"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_alignParentRight="true"
                                            android:layout_centerVertical="true"
                                            android:layout_marginLeft="@dimen/padding_10"
                                            android:background="@null"
                                            android:fontFamily="@font/montserrat"
                                            android:gravity="center_vertical|center_horizontal"
                                            android:maxLines="1"
                                            android:singleLine="true"
                                            android:text="Edit"
                                            android:textColor="@color/black"
                                            android:textSize="14dp"
                                            android:textStyle="bold"
                                            android:visibility="visible" />

                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                                <CheckBox
                                    android:id="@+id/cb_details"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="Same as Above" />


                                <TextView
                                    android:layout_width="130dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:paddingStart="5dp"
                                    android:paddingEnd="5dp"
                                    android:text="Bill To"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_below="@id/cv_shippingAddress"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginLeft="@dimen/padding_10"
                                    android:layout_marginTop="@dimen/padding_10"
                                    android:layout_marginRight="@dimen/padding_10"
                                    android:layout_marginBottom="@dimen/padding_20"
                                    android:elevation="@dimen/fontStyle5"
                                    app:cardCornerRadius="10dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:weightSum="10">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/padding_20"
                                            android:layout_marginBottom="@dimen/padding_10"
                                            android:layout_weight="9"
                                            android:orientation="vertical">

                                            <EditText
                                                android:id="@+id/tv_billingName"
                                                android:layout_width="wrap_content"
                                                android:layout_height="35dp"
                                                android:background="@null"
                                                android:enabled="false"
                                                android:fontFamily="@font/montserrat"
                                                android:hint="Name"
                                                android:maxLines="1"
                                                android:singleLine="true"
                                                android:textColor="@color/black"
                                                android:textSize="14dp"
                                                android:textStyle="bold"
                                                android:visibility="visible" />

                                            <EditText
                                                android:id="@+id/tv_billingPhone"
                                                android:layout_width="wrap_content"
                                                android:layout_height="35dp"
                                                android:layout_below="@id/tv_shippingName"
                                                android:background="@null"
                                                android:enabled="false"
                                                android:fontFamily="@font/montserrat"
                                                android:hint="Number"
                                                android:textColor="@color/black"
                                                android:textSize="14dp"
                                                android:textStyle="bold"
                                                android:visibility="visible" />

                                            <EditText
                                                android:id="@+id/tv_billingAddress"
                                                android:layout_width="wrap_content"
                                                android:layout_height="35dp"
                                                android:layout_below="@id/tv_shippingName"
                                                android:background="@null"
                                                android:enabled="false"
                                                android:fontFamily="@font/montserrat"
                                                android:hint="Address"
                                                android:textColor="@color/black"
                                                android:textSize="14dp"
                                                android:textStyle="bold"
                                                android:visibility="visible" />

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginRight="@dimen/padding_20"
                                                android:background="@drawable/rectangular_border_simple"
                                                android:orientation="horizontal">

                                                <Spinner
                                                    android:id="@+id/tv_billingcity"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="35dp"
                                                    android:layout_centerVertical="true"
                                                    android:fontFamily="@font/montserrat"
                                                    android:hint="City"
                                                    android:maxLines="1"
                                                    android:paddingLeft="@dimen/padding_10"
                                                    android:singleLine="true"
                                                    android:spinnerMode="dialog"
                                                    android:textColor="@color/black"
                                                    android:textSize="14dp"
                                                    android:textStyle="bold"
                                                    android:visibility="visible" />

                                                <TextView
                                                    android:id="@+id/tv_totAmt"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:layout_marginRight="@dimen/padding_10"
                                                    android:layout_weight="1"
                                                    android:background="@color/white"
                                                    android:fontFamily="@font/montserrat"
                                                    android:gravity="end|center_vertical"
                                                    android:text="0"
                                                    android:textAllCaps="true"
                                                    android:textColor="@color/colorPrimary"
                                                    android:textSize="18dp"
                                                    android:textStyle="bold"
                                                    android:visibility="visible" />

                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="5dp"
                                                android:layout_marginRight="@dimen/padding_20"
                                                android:background="@drawable/rectangular_border_simple"
                                                android:orientation="horizontal">

                                                <Spinner
                                                    android:id="@+id/tv_billingstate"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="35dp"
                                                    android:layout_centerVertical="true"
                                                    android:fontFamily="@font/montserrat"
                                                    android:hint="State"
                                                    android:maxLines="1"
                                                    android:paddingLeft="@dimen/padding_10"
                                                    android:singleLine="true"
                                                    android:spinnerMode="dialog"
                                                    android:textColor="@color/black"
                                                    android:textSize="14dp"
                                                    android:textStyle="bold"
                                                    android:visibility="visible" />

                                            </LinearLayout>

                                            <EditText
                                                android:id="@+id/tv_billingPincode"
                                                android:layout_width="wrap_content"
                                                android:layout_height="35dp"
                                                android:layout_below="@id/tv_shippingName"
                                                android:background="@null"
                                                android:enabled="false"
                                                android:fontFamily="@font/montserrat"
                                                android:hint="Address"
                                                android:textColor="@color/black"
                                                android:textSize="14dp"
                                                android:textStyle="bold"
                                                android:visibility="visible" />
                                        </LinearLayout>

                                        <View
                                            android:layout_width="1dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginTop="@dimen/padding_10"
                                            android:layout_marginBottom="@dimen/padding_10"
                                            android:layout_toLeftOf="@id/tv_shippingEdit"
                                            android:background="@color/darker_gray" />

                                        <TextView
                                            android:id="@+id/tv_billingEdit"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_alignParentRight="true"
                                            android:layout_centerVertical="true"
                                            android:layout_marginLeft="@dimen/padding_10"
                                            android:background="@null"
                                            android:fontFamily="@font/montserrat"
                                            android:gravity="center_vertical|center_horizontal"
                                            android:maxLines="1"
                                            android:singleLine="true"
                                            android:text="Edit"
                                            android:textColor="@color/black"
                                            android:textSize="14dp"
                                            android:textStyle="bold"
                                            android:visibility="visible" />

                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                            </LinearLayout>
                        </LinearLayout>
                        <!-- End Ship and Bill -->

                    </LinearLayout>

                </RelativeLayout>

            </ScrollView>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_totamt"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_above="@+id/ll_place">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:layout_weight="1"
                android:background="@color/grey"
                android:paddingRight="10dp"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textAllCaps="true"
                android:gravity="left|center_vertical"
                android:text="Total"
                android:paddingLeft="@dimen/padding_10"
                android:visibility="visible"
                android:fontFamily="@font/montserrat" />

        <TextView
                android:id="@+id/tv_totFinalAmt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:layout_weight="1"
                android:background="@color/grey"
                android:paddingRight="10dp"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textAllCaps="true"
                android:gravity="end|center_vertical"
                android:text="0"
                android:paddingLeft="@dimen/padding_10"
                android:visibility="visible"
                android:fontFamily="@font/montserrat" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_place"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:weightSum="2"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:id="@+id/tv_placeOrder"
                android:layout_weight="2"
                android:layout_marginRight="4dp"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textAllCaps="true"
                android:gravity="center"
                android:background="@color/colorPrimary"
                android:text="Place Order"
                android:visibility="visible"
                android:fontFamily="@font/montserrat" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:id="@+id/tv_checkout"
                android:layout_weight="2"
                android:text="Checkout"
                android:gravity="center"
                android:background="@color/colorPrimary"
                android:layout_marginRight="4dp"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:visibility="gone"
                android:fontFamily="@font/montserrat" />


        </LinearLayout>

    </RelativeLayout>
</layout>