<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_customerItem"
    android:orientation="vertical"
    android:layout_margin="15dp">

    <!--220dp-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/fontStyle5"
            app:cardCornerRadius="@dimen/fontStyle5"
            android:layout_margin="@dimen/padding_10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/padding_10">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/avatar"
                    android:layout_alignParentLeft="true"/>

                <LinearLayout
                    android:id="@+id/ll_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/padding_10"
                    android:layout_toRightOf="@id/img">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:id="@+id/tv_title"
                        android:layout_marginRight="4dp"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:visibility="visible"
                        android:text="ddd ksjdhfj | sdjfks kjsdfhks | jh"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textStyle="normal"
                        android:id="@+id/tv_CatName"
                        android:layout_marginRight="4dp"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:visibility="visible"
                        android:text="566"/>

                 <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textStyle="normal"
                        android:id="@+id/tv_desc"
                        android:layout_marginRight="4dp"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                         android:maxLines="2"
                         android:ellipsize="end"
                        android:visibility="visible"
                        android:text="566"/>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="15dp"
                        >

                        <TextView
                            android:id="@+id/tv_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2.6 "
                            android:drawableRight="@drawable/ic_baseline_star_rate_24"
                            android:drawablePadding="5dp"
                            android:textSize="12sp"
                            android:layout_alignParentLeft="true"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:paddingEnd="5dp"
                            android:paddingStart="5dp"
                            android:visibility="visible"/>

                        <TextView
                            android:id="@+id/tv_dis_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:text="0.0"
                            android:layout_toLeftOf="@+id/tv_amount"
                            android:textStyle="bold"
                            android:layout_marginRight="10dp"
                            android:visibility="visible"/>

                        <TextView
                            android:id="@+id/tv_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:gravity="center"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="center_vertical"
                            android:text="0.0"
                            android:textStyle="bold"
                            android:layout_marginRight="10dp" />





                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>